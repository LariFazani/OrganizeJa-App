<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.organizeja.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_transacoes"
        android:name="com.example.organizeja.ui.transacoes.TransacoesFragment"
        android:label="@string/title_transacoes"
        tools:layout="@layout/fragment_transacoes" >
        <action
            android:id="@+id/action_transacoes_to_adicionarTransacao"
            app:destination="@id/navigation_adicionar_transacao" />
    </fragment>

    <fragment
        android:id="@+id/navigation_adicionar_transacao"
        android:name="com.example.organizeja.ui.transacoes.AdicionarTransacaoFragment"
        android:label="@string/title_adicionar_transacao"
        tools:layout="@layout/fragment_adicionar_transacao" />

    <fragment
        android:id="@+id/navigation_metas"
        android:name="com.example.organizeja.ui.metas.MetasFragment"
        android:label="@string/title_metas"
        tools:layout="@layout/fragment_metas" >
    <action
        android:id="@+id/action_metas_to_adicionarMeta"
        app:destination="@id/navigation_adicionar_meta" />
    </fragment>

    <fragment
        android:id="@+id/navigation_adicionar_meta"
        android:name="com.example.organizeja.ui.adicionarmeta.AdicionarMetaFragment"
        android:label="@string/title_adicionar_meta"
        tools:layout="@layout/fragment_adicionar_meta" />

    <fragment
        android:id="@+id/navigation_configuracao"
        android:name="com.example.organizeja.ui.configuracao.ConfiguracaoFragment"
        android:label="@string/title_configuracao"
        tools:layout="@layout/fragment_configuracao" />
</navigation>